#include <stdio.h>

int main() {
    int row,i,j;
    printf("Enter the row you want\n");
    scanf("%d",&row);
    {
        for(i=0;i<=row;i++)
        {
            for(j=1;j<=i;j++)
            {
                printf("%d",j);
            }
            printf("\n");
        }
    }
    
    
    return 0;
}
